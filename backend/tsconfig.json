{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"forceConsistentCasingInFileNames": true,
		"declaration": false,
		"sourceMap": true,
		"baseUrl": "./src",
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
