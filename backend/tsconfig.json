{
    "compilerOptions": {
      "target": "ESNext",          
      "module": "commonjs",        
      "outDir": "./dist",       
      "rootDir": "./src",         
      "strict": true,            
      "esModuleInterop": true,       
      "skipLibCheck": true,     
      "forceConsistentCasingInFileNames": true,  
      "declaration": false,    
      "sourceMap": true      
    },
    "include": [
      "./src/**/*.ts"            
    ],
    "exclude": [
      "node_modules"          
    ],
    "paths": {
        "@/*": [
            "/*"
        ]
    }
  }
  